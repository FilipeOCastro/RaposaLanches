@model Raposa.Lanches.Web.Models.LancheModel

@{
    ViewData["Title"] = "Create";
}

<h4>Lanches</h4>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" asp-controller="Lanche" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label for="inputIngrediente">Ingrediente</label>
                    <select id="inputIngrediente" class="form-control">

                        <option selected value="0">Ingredientes...</option>
                        @foreach (var item in (List<IngredienteModel>)ViewBag.Ingredientes)
                        {
                            <option value="@item.ID">@item.Nome</option>
                        }

                    </select>
                </div>

                <div class="form-group">
                    <input type="button" id="addIngrediente" value="Add" class="btn btn-info"  />
                </div>

            </div>

            <h5>Ingredientes</h5>

            <table class="table" id="tbIngredientes">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Valor</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>

            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary float-right" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listar Lanches</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
