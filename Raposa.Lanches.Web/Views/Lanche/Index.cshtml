@model IEnumerable<Raposa.Lanches.Web.Models.LancheModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Lanches</h1>

<p>
    <a asp-action="Create">Adicionar Lanche</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>

            <th>
                Ingredientes
            </th>

            <th>
               Valor
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>

            <td>
                @foreach (var ingrediente in item.LancheIngredientes)
                {
                    @string.Concat(ingrediente.Ingrediente.Nome, "; ")
                }
            </td>
            <td>
                @item.LancheIngredientes.Sum(x => x.Ingrediente.Valor)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
